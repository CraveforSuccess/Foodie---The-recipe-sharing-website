<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <div class="container d-flex justify-content-center align-items-center flex-column">
        <h4 class="text-center mb-0">Your Recipes</h4>
            <div class="main d-flex flex-row flex-wrap justify-content-center align-items-center">
                <% if(RecipeArr === []){%>
                    <% console.log("Empty")%>
                     <%} else {%>
                   
                         <% RecipeArr.forEach((elem)=>{ %>
                             <div class="card d-flex justify-content-center align-items-center text-center me-2" style="width: 18rem;">
                                 <!-- <img src="..." class="card-img-top" alt="..."> -->
                                 <div class="card-body">
                                     <h5 class="card-title">
                                         <%=elem.title%>
                                     </h5>
                                     <h5 class="card-title"> Ingredients:- </h5>
                                     <p class="card-text">
                                         <% elem.Ingredients.forEach((ing)=>{ %>
                                           <li><%=ing%></li>  
                                      <%   }) %>
                                     </p>
                                     <h5 class="card-title"> Process :- </h5>
                 
                                     <p class="card-text">
                                         <% elem.Rec_process.forEach((prc)=>{ %>
                                           <li> <%=prc%></li> 
                                       <%  })%>
                                     </p>
                                     <h3>Author:</h3>
                                     <p class="card-text">
                                         <li><%=elem.Author%></li>
                                     </p>
                 
                                     
                                 </div>
                             </div>
                 
                             <% }) %>
                    <% } %>
            </div>
           
      
                <h2 class="text-center">What you want to do?</h2>
                <div class="main d-flex  justify-content-evenly">

                    <button class="btn btn-primary mx-2"><a href="/AddRecipe" class="text-decoration-none text-light">Add a
                            Recipe</a></button>
                    <button class="btn btn-primary "><a href="/Browse"
                            class="text-decoration-none text-light">Browse Recipe</a></button>
                </div>
    </div>

</body>

</html>