<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Browse Recipes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <div class="container">
        <h1>Browse The Recipies</h1>
        <form method="post">
            <input type="search" name="searchBox" id="">
            <button class="btn btn-primary" type="submit">Search</button>
        </form>


        <div class="RecipesData">
            <div class="main d-flex flex-row justify-content-center align-items-center flex-wrap">
                <% if(RecipeArr === []){%>
                    <% console.log("Empty")%>
                     <%} else {%>
                   
                         <% RecipeArr.forEach((elem)=>{ %>
                             <div class="card d-flex justify-content-center align-items-center text-center me-2 mt-2" style="width: 18rem;">
                                 <!-- <img src="..." class="card-img-top" alt="..."> -->
                                 <div class="card-body">
                                     <h5 class="card-title">
                                         <%=elem.title%>
                                     </h5>
                                     <h5 class="card-title"> Ingredients:- </h5>
                                     <p class="card-text">
                                         <% elem.Ingredients.forEach((ing)=>{ %>
                                           <li><%=ing%></li>  
                                      <%   }) %>
                                     </p>
                                     <h5 class="card-title"> Process :- </h5>
                 
                                     <p class="card-text">
                                         <% elem.Rec_process.forEach((prc)=>{ %>
                                           <li> <%=prc%></li> 
                                       <%  })%>
                                     </p>
                                     <h3>Author:</h3>
                                     <p class="card-text">
                                         <li><%=elem.Author%></li>
                                     </p>
                                     <button class="btn btn-success"><a href="/Login" class="text-decoration-none text-white">Home</a></button>
                                     
                                 </div>
                             </div>
                 
                             <% }) %>
                    <% } %>
            </div>
    
        </div>
    </div>

</body>

</html>